<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.berg.firstclass.mapper.StudentMapper">

    <sql id="TableName">
        student
    </sql>

    <!-- 基本映射结果 -->
    <resultMap id="BaseResultMap" type="com.berg.firstclass.dto.StudentDto">
        <id column="STUDENT_ID" property="studentId" jdbcType="BIGINT"/>
        <result column="DEPARTMENT_ID" property="departmentId" jdbcType="BIGINT"/>
        <result column="NUMBER" property="number" jdbcType="VARCHAR"/>
        <result column="NAME" property="name" jdbcType="VARCHAR"/>
        <result column="BIRTHDAY" property="birthday" jdbcType="DATE"/>
    </resultMap>

    <!-- 扩展映射结果 -->
    <resultMap id="ExtendsResultMap" type="com.berg.firstclass.dto.StudentDto"
        extends="com.berg.firstclass.mapper.StudentMapper.BaseResultMap">

        <!-- 部门 -->
        <association property="departmentDto" column="department_id"
                     select="com.berg.firstclass.mapper.DepartmentMapper.selectOne"/>

        <!-- 爱好 -->
        <collection property="hobbyDtos" column="student_id"
                    ofType="com.berg.firstclass.dto.HobbyDto"
                    select="com.berg.firstclass.mapper.HobbyMapper.selectMore"/>
    </resultMap>

    <!-- 基本属性 -->
    <sql id="BaseSql">
        ${prefix}.STUDENT_ID,
        ${prefix}.DEPARTMENT_ID,
        ${prefix}.NUMBER,
        ${prefix}.NAME,
        ${prefix}.BIRTHDAY
    </sql>

    <!-- 扩展属性 -->
    <sql id="ExtendsSql">
        ${prefix}.STUDENT_ID      ${suffix}_STUDENT_ID,
        ${prefix}.DEPARTMENT_ID   ${suffix}_DEPARTMENT_ID,
        ${prefix}.NUMBER          ${suffix}_NUMBER,
        ${prefix}.NAME            ${suffix}_NAME,
        ${prefix}.BIRTHDAY        ${suffix}_BIRTHDAY
    </sql>

    <!-- 基本条件 -->
    <sql id="BaseCondition">
        <if test="studentId!=null and studentId!=0">
            AND ${prefix}.STUDENT_ID = #{studentId}
        </if>
    </sql>

    <select id="selectOne" resultMap="com.berg.firstclass.mapper.StudentMapper.BaseResultMap"
            parameterType="long">
        SELECT
        <include refid="com.berg.firstclass.mapper.StudentMapper.BaseSql">
            <property name="prefix" value="s"/>
        </include>

        FROM
        <include refid="com.berg.firstclass.mapper.StudentMapper.TableName"/> s

        WHERE
        s.STUDENT_ID = #{studentId}
    </select>

    <select id="select" resultMap="com.berg.firstclass.mapper.StudentMapper.BaseResultMap"
            parameterType="com.berg.firstclass.dto.StudentDto">
        SELECT
        <include refid="com.berg.firstclass.mapper.StudentMapper.BaseSql">
            <property name="prefix" value="s"/>
        </include>

        FROM
        <include refid="com.berg.firstclass.mapper.StudentMapper.TableName"/> s

        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <include refid="com.berg.firstclass.mapper.StudentMapper.BaseCondition">
                <property name="prefix" value="s"/>
            </include>
        </trim>
    </select>

    <select id="selectWithExtends" resultMap="com.berg.firstclass.mapper.StudentMapper.ExtendsResultMap"
            parameterType="com.berg.firstclass.dto.StudentDto">
        SELECT
        <include refid="com.berg.firstclass.mapper.StudentMapper.BaseSql">
            <property name="prefix" value="s"/>
        </include>

        FROM
        <include refid="com.berg.firstclass.mapper.StudentMapper.TableName"/> s

        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <include refid="com.berg.firstclass.mapper.StudentMapper.BaseCondition">
                <property name="prefix" value="s"/>
            </include>
        </trim>
    </select>

</mapper>